<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="samsung.com.memoryleaktestapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".TestApplication">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.HandlerTestActivity">
        </activity>

        <activity android:name=".activity.HandlerTestActivityWithMessenger">
        </activity>

        <activity android:name=".activity.ThreadTestActivity">
        </activity>

        <activity android:name=".activity.ExecutorServiceTestActivity">
        </activity>

        <service android:name=".service.BackgroundService"
            android:enabled="true"
            android:exported="false"
            android:process=":BackgroundService"
            />
    </application>

</manifest>